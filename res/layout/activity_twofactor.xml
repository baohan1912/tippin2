<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/all_colorLightGrey">

        <include
            android:id="@+id/toolbartwofactor"
            layout="@layout/custom_actionbar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layoutAuthentication"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/all_colorWhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbartwofactor"
            app:layout_constraintHorizontal_bias="1.0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="8dp"
                android:text="@string/settingTwoFactorAuth_twoStepAuthentication"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/toggleButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.529"
                android:id="@+id/textView"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="100dp" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/tbtnauthentication"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/padding_custom_switch"
                android:theme="@style/customSwitch"
                app:trackTint="@color/all_transparent"
                android:layout_marginEnd="20dp" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:layout_width="70dp"
            android:layout_height="18dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/qrcode"
            android:text="@string/qr_code"
            android:textColor="@color/all_colorWhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutAuthentication"
            android:id="@+id/textView3" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="276dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/all_colorWhite"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/TVgroup_marginbot"
                android:text="@string/settingTwoFactorAuth_description" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:scaleType="fitCenter"
                android:src="@drawable/qrcode_image" />
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</layout>
